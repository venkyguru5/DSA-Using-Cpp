#include <iostream>
using namespace std;
class Book
{
public:
    int cost;
    string name;
    void accept()
    {
        cout << "ENTER HE BOOK TITLE :- ";
        cin >> name;
        cout << "ENTER HE BOOK OF COST:- ";
        cin >> cost;
    }
    void display()
    {
        cout << name << "\t\t" << cost << "\n";
    }
};
int main()
{
    Book b[10], b1[10];
    int n, i, j, ch, count = 0, rem = 0;
    cout << "HOW MANY BOOK ARE YOU ENTER IT:-  ";
    cin >> n;
    do
    {
        cout << "\nMENU\n1)ACCEPT\n2)DISPLAY\n3)SORTED\n4)Remove duplicate\n5)Display remove duplicate\n6)Count\n7)Exit\nEnter your choice :- ";
        cin >> ch;
        switch (ch)
        {
        case 1:
            for (i = 0; i < n; i++)
                b[i].accept();
            break;
        case 2:
            cout << "BOOK TITLE\tCOST\n";
            for (i = 0; i < n; i++)
                b[i].display();
            break;
        case 3:
            for (i = 0; i < n - 1; i++)
            {
                for (j = 0; j < n - i - 1; j++)
                {
                    if (b[j + 1].cost > b[j].cost)
                    {
                        Book temp;
                        temp = b[j + 1];
                        b[j + 1] = b[j];
                        b[j] = temp;
                    }
                }
            }
            cout << "\n";
            for (i = 0; i < n; i++)
                b[i].display();
            break;
        case 4:

            for (i = 0; i < n; i++)
            {
                for (j = i + 1; j < n; j++)
                {
                    if (b[j].name == b[i].name)
                    {
                        b1[rem++] = b[j];

                        for (int k = j; k < n - 1; k++)
                        {
                            b[k] = b[k + 1];
                        }
                        n--;
                        j--;
                    }
                }
            }
            cout << "Remove:";
            break;
        case 6:
            cout << "BOOK TITLE\tCOST\n";
            for (i = 0; i < n; i++)
            {
                if (b[i].cost <= 500)
                {
                    cout << b[i].name << " \t\t" << b[i].cost << "\n";
                }
                else
                {
                    count++;
                }
            }
            cout << "\nThe number of book which greater 500: " << count;
            break;
        case 5:
            for (i = 0; i < rem; i++)
            {
                b1[i].display();
            }
        };

    } while (ch != 7);
    return 0;
}
